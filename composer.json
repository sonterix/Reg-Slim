{
    "name": "regSlim",
    "description": "Slim Registration",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sonterix",
            "email": "sonterixo@gmail.com"
        }
    ],
    "require-dev": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/pdo": "~1.10"
    },
    "require": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\Controller\\": "src/Controllers",    
            "App\\Model\\": "src/Models"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}